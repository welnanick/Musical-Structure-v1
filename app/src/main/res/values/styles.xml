<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="Navigation" parent="TextAppearance.AppCompat.Large">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">@dimen/padding_start_end</item>
        <item name="android:paddingStart">@dimen/padding_start_end</item>
        <item name="android:paddingRight">@dimen/padding_start_end</item>
        <item name="android:paddingEnd">@dimen/padding_start_end</item>
        <item name="android:paddingTop">@dimen/padding_top_bottom</item>
        <item name="android:paddingBottom">@dimen/padding_top_bottom</item>

    </style>

    <style name="DescriptionStyle" parent="TextAppearance.AppCompat.Body1">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">@dimen/padding_start_end</item>
        <item name="android:paddingStart">@dimen/padding_start_end</item>
        <item name="android:paddingRight">@dimen/padding_start_end</item>
        <item name="android:paddingEnd">@dimen/padding_start_end</item>
        <item name="android:paddingBottom">@dimen/padding_top_bottom</item>
        <item name="android:layout_alignParentBottom">true</item>

    </style>

    <style name="DescriptionLabelStyle" parent="TextAppearance.AppCompat.Body1">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">@dimen/padding_start_end</item>
        <item name="android:paddingStart">@dimen/padding_start_end</item>
        <item name="android:paddingRight">@dimen/padding_start_end</item>
        <item name="android:paddingEnd">@dimen/padding_start_end</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="DividerTheme">

        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/padding_start_end</item>
        <item name="android:layout_marginStart">@dimen/padding_start_end</item>
        <item name="android:layout_marginRight">@dimen/padding_start_end</item>
        <item name="android:layout_marginEnd">@dimen/padding_start_end</item>
        <item name="android:background">@color/black</item>

    </style>

</resources>
