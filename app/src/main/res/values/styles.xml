<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="Navigation" parent="TextAppearance.AppCompat.Large">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingStart">@dimen/padding_start_end</item>
        <item name="android:paddingEnd">@dimen/padding_start_end</item>
        <item name="android:paddingTop">@dimen/padding_top_bottom</item>
        <item name="android:paddingBottom">@dimen/padding_top_bottom</item>

    </style>

    <style name="SongNavigation" parent="Navigation">

        <item name="android:drawableEnd">@drawable/ic_play_arrow_black_24dp</item>

    </style>

    <style name="BuySongNavigation" parent="Navigation">

        <item name="android:drawableEnd">@drawable/ic_add_shopping_cart_black_24dp</item>

    </style>

    <style name="DescriptionStyle" parent="TextAppearance.AppCompat.Body1">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingStart">@dimen/padding_start_end</item>
        <item name="android:paddingEnd">@dimen/padding_start_end</item>
        <item name="android:paddingBottom">@dimen/padding_top_bottom</item>
        <item name="android:layout_alignParentBottom">true</item>

    </style>

    <style name="SongDescriptionStyle" parent="TextAppearance.AppCompat.Body2">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">center</item>

    </style>

    <style name="DescriptionLabelStyle" parent="TextAppearance.AppCompat.Body1">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingStart">@dimen/padding_start_end</item>
        <item name="android:paddingEnd">@dimen/padding_start_end</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="DividerTheme">

        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/padding_start_end</item>
        <item name="android:layout_marginEnd">@dimen/padding_start_end</item>
        <item name="android:background">@color/black</item>

    </style>

    <style name="AlbumCoverStyle">

        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>

    </style>

    <style name="ControlsStyle">

        <item name="android:layout_height">64dp</item>
        <item name="android:layout_width">64dp</item>

    </style>

</resources>
